<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:paddingTop="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="6dp"
        android:background="#FF8CBA5C"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/managememory_back"
            app:srcCompat="@drawable/icon_back_white"/>

        <TextView
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/managememory"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:textColor="@android:color/white"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="12dp"
            android:id="@+id/managememory_img"
            app:srcCompat="@drawable/icon_back_white"/>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="13sp"
                android:singleLine="true"
                android:id="@+id/managememory_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textColor="@android:color/black"/>

            <TextView
                android:textSize="13sp"
                android:singleLine="true"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/managememory_version"
                android:gravity="center_vertical|left"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:textSize="16sp"
        android:gravity="center"
        android:singleLine="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="#FF8CBA5C"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/managememory_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clearallmemory"
        android:textColor="@android:color/white"/>
</LinearLayout>